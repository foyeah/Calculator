<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal">

    <TextView
            android:text="0"
            android:gravity="fill"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:id="@+id/InputField"
            android:layout_width="wrap_content"/>
    <Button android:layout_column="2" android:id="@+id/Button_Clear" android:text="C" />
    <Button android:layout_column="3" android:id="@+id/Button_Backspace" android:text="←" />
    <Button android:layout_column="0" android:id="@+id/Button_One" android:text="1" />
    <Button android:layout_column="1" android:id="@+id/Button_Two" android:text="2" />
    <Button android:layout_column="2" android:id="@+id/Button_Three" android:text="3" />
    <Button android:layout_column="3" android:id="@+id/Button_Sum" android:text="+" />
    <Button android:layout_column="0" android:id="@+id/Button_Four" android:text="4" />
    <Button android:layout_column="1" android:id="@+id/Button_Five" android:text="5" />
    <Button android:layout_column="2" android:id="@+id/Button_Six" android:text="6" />
    <Button android:layout_column="3" android:id="@+id/Button_Sub" android:text="-" />
    <Button android:layout_column="0" android:id="@+id/Button_Seven" android:text="7" />
    <Button android:layout_column="1" android:id="@+id/Button_Eight" android:text="8" />
    <Button android:layout_column="2" android:id="@+id/Button_Nine" android:text="9" />
    <Button android:layout_column="3" android:id="@+id/Button_Mul" android:text="*" />
    <Button android:layout_column="0" android:id="@+id/Button_Point" android:text="." />
    <Button android:layout_column="1" android:id="@+id/Button_Zero" android:text="0" />
    <Button android:layout_column="2" android:id="@+id/Button_Equals" android:text="=" />
    <Button android:layout_column="3" android:id="@+id/Button_Div" android:text="/" />

    <TextView android:text="0"
              android:gravity="fill"
              android:layout_column="0"
              android:layout_columnSpan="2"
              android:id="@+id/MathEx"
              android:layout_width="wrap_content"/>

</GridLayout>